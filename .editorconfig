root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab


